{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 8
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "default-publish",
            "hidden": true,
            "inherits": [
                "default"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "COMMIT_ID_IN_VERSION": false
            }
        },
        {
            "name": "default-msvc",
            "hidden": true,
            "inherits": [
                "default"
            ],
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "default-gcc",
            "hidden": true,
            "inherits": [
                "default"
            ],
            "generator": "Ninja Multi-Config",
            "environment": {
                "CC": "gcc",
                "CXX": "g++"
            }
        },
        {
            "name": "default-publish-msvc",
            "hidden": true,
            "inherits": [
                "default-publish"
            ],
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "default-publish-gcc",
            "hidden": true,
            "inherits": [
                "default-publish"
            ],
            "generator": "Ninja",
            "environment": {
                "CC": "gcc",
                "CXX": "g++"
            }
        },
        {
            "name": "windows-x64-msvc",
            "inherits": [
                "default-msvc"
            ],
            "installDir": "${sourceDir}/build/bin",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static"
            },
            "architecture": {
                "strategy": "set",
                "value": "x64"
            },
            "toolset": {
                "strategy": "set",
                "value": "host=x64"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS":"Windows",
                    "intelliSenseMode": "windows-msvc-x64"
                }
            }
        },
        {
            "name": "windows-x64-msvc-publish",
            "inherits": [
                "default-publish-msvc"
            ],
            "installDir": "${sourceDir}/build/bin",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static-release"
            },
            "architecture": {
                "strategy": "set",
                "value": "x64"
            },
            "toolset": {
                "strategy": "set",
                "value": "host=x64"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS":"Windows",
                    "intelliSenseMode": "windows-msvc-x64"
                }
            }
        },
        {
            "name": "linux-x64",
            "inherits": [
                "default"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-linux-release"
            }
        },
        {
            "name": "linux-arm64",
            "inherits": [
                "default"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "arm64-linux-release",
                "CMAKE_C_COMPILER": "aarch64-linux-gnu-gcc",
                "CMAKE_CXX_COMPILER": "aarch64-linux-gnu-g++"
            }
        },
        {
            "name": "osx-x64",
            "inherits": [
                "default"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-osx-release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x64-msvc-debug",
            "configurePreset": "windows-x64-msvc",
            "configuration": "Debug"
        },
		{
            "name": "windows-x64-msvc-release",
            "configurePreset": "windows-x64-msvc",
            "configuration": "Release"
        },
        {
            "name": "windows-x64-msvc-publish",
            "configurePreset": "windows-x64-msvc-publish",
            "configuration": "Release"
        },
        {
            "name": "linux-x64",
            "configurePreset": "linux-x64"
        },
        {
            "name": "linux-arm64",
            "configurePreset": "linux-arm64"
        },
        {
            "name": "osx-x64",
            "configurePreset": "osx-x64"
        }
    ]
}